@using SportsEquipmentShop.Models;

<h1 id="ShoeTitle">Sale!</h1>

<div class="SectionTshirts">
    <label for="Shoes">Sort By:</label>
    <select name="Shoes" id="shirtsSelect">
        <option class="options" value="choose">choose</option>
        <option class="options" value="true">cheap-expensive</option>
    </select>
    <button type="button" class="btnsort" onclick="location.href= '/Shoes/SortByPrice'">Sort</button>
</div>


<button onclick="location.href= '/Shoes/OnSale'" type="button" class="btnsort">Shoes On Sale</button>

<br />

@foreach (Shoe item in Model)
{
    if (@item.price < 200 || @item.price == 200)
    {
        <section id="ShooesData">
            <div>

                <p class="ShoeTitle">
                    @item.Company

                    @item.Model
                </p>

                <h4 class="ShoeTitle">  @item.price $</h4>

                <img id="ShoeImage" src=@item.image>


            </div>
        </section>
    }


}



